<h2>User info</h2>
  <tr><%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpg', fallback: "no_image.jpg" %></tr>
    <table class="table table-hover table-inverse">
      <tbody>
        <tr>
          <th>name</th>
          <th><%= user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= user.introduction %></th>
        </tr>
      </div>
      </tbody>
    </table>
    
    <div>
        <%= link_to edit_user_path(user.id), class: "btn btn-outline-secondary btn-block" , method: :get do %>
        <i class="fas fa-user-cog"></i>
        <% end %>
    </div
