<body>  
  <div class="container">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
    
    <p id="notice">
      <%= notice %>
    </p>
    
    <%= render 'layouts/error',error: @book %>

      
      <%= form_with model:@user, local: true do |f| %>
        <div class="container">
          <form>
            <div class="form-group">
              <p>Name</p>
              <input type="text" name="name" class="form-controll col-sm-12">
            </div>
            
            <div class="form-group">
              <p>Image</p>
              <%= f.attachment_field :profile_image,placeholder: "Image", class: "user-edit-form" %>
            </div>
            
            <div class="form-group">
              <p>Introduction</p>
              <textarea name="introduction" class="form-controll col"></textarea>
            </div>
            <%= f.submit class: "btn btn-secondary" %>
          </form>
        </div>
      <% end %>
    </div>
  </div>
</body>
