<h2>New book</h2>
<%= form_with model:@book, local: true do |f| %>
    <div class="form-group">
      <p>Title</p>
      <input type="text" name="title" class="form-controll col-md-12">
    </div>
    <div class="form-group">
      <p>Opinion</p>
      <textarea name="body" class="form-controll col-md-12"></textarea>
    </div>
    <div>
      <%= f.submit class: "btn btn-success col-md-12" %>
    </div>
<% end %>
