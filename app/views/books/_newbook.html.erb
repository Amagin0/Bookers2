<h2>New book</h2>
<%= form_with model:book, local: true do |f| %>
    <div class="form-group">
      <%= f.label :Title %>
      <%= f.text_field :title, class: 'form-controll col-md-12' %>
    </div>
    <div class="form-group">
      <%= f.label :Opinion %>
      <%= f.text_area :body, class: 'form-controll col-md-12' %>
    </div>
    <div>
      <%= f.submit class: 'btn btn-success col-md-12' %>
    </div>
<% end %>